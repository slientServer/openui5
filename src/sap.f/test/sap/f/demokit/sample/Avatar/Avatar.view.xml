<mvc:View
		controllerName="sap.f.sample.Avatar.Avatar"
		xmlns:mvc="sap.ui.mvc"
		xmlns:f="sap.f"
		xmlns:m="sap.m"
		xmlns:l="sap.ui.layout"
		height="100%">

	<m:ScrollContainer
		height="100%"
		width="100%"
		horizontal="false"
		vertical="true">
		<m:Text
				text="The Avatar Control allows usage of different shapes, sizes and content:"
				width="100%"
				class="sapUiSmallMarginTop sapUiSmallMarginBegin sapUiMediumMarginBottom">
		</m:Text>
		<l:Grid
			defaultSpan="XL2 L3 M6 S6">
			<l:content>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						src="./test-resources/sap/f/images/Speakers_avatar_01.jpg"
						displaySize="XL"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="Avatar of a product"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						src="./test-resources/sap/f/images/Woman_avatar_01.png"
						displaySize="XL">
					</f:Avatar>
					<m:Text
						text="Avatar of a person"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						initials="IS"
						displaySize="XL"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="Square with initials"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						initials="IS"
						displaySize="XL">
					</f:Avatar>
					<m:Text
						text="Circle with initials"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						src="sap-icon://lab"
						displaySize="XL"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="With lab icon"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						displaySize="XL">
					</f:Avatar>
					<m:Text
						text="With person icon"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
			</l:content>
		</l:Grid>
		<m:Text
				text="The Avatar can be set to a square or circular shape with a predefined size:"
				width="100%"
				class="sapUiSmallMarginBegin sapUiMediumMarginTop sapUiMediumMarginBottom">
		</m:Text>
		<l:Grid
			defaultSpan="XL2 L2 M3 S12">
			<l:content>
				<m:VBox
					alignItems="Center"
					alignContent="End">
					<f:Avatar
						src="./test-resources/sap/f/images/Screw_avatar_01.jpg"
						displaySize="XL"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="XL"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center"
					alignContent="End">
					<f:Avatar
						src="./test-resources/sap/f/images/Screw_avatar_01.jpg"
						displaySize="L"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="L"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						src="./test-resources/sap/f/images/Screw_avatar_01.jpg"
						displaySize="M"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="M"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						src="./test-resources/sap/f/images/Screw_avatar_01.jpg"
						displaySize="S"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="S"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						src="./test-resources/sap/f/images/Screw_avatar_01.jpg"
						displaySize="XS"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="XS"
						class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
			</l:content>
		</l:Grid>
		<l:Grid
				defaultSpan="XL2 L2 M3 S12"
				class="sapUiMediumMarginTop">
			<l:content>
				<m:VBox
						alignItems="Center">
					<f:Avatar
							src="./test-resources/sap/f/images/Woman_avatar_02.png"
							displaySize="XL">
					</f:Avatar>
					<m:Text
							text="XL"
							class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
						alignItems="Center">
					<f:Avatar
							src="./test-resources/sap/f/images/Woman_avatar_02.png"
							displaySize="L">
					</f:Avatar>
					<m:Text
							text="L"
							class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
						alignItems="Center">
					<f:Avatar
							src="./test-resources/sap/f/images/Woman_avatar_02.png"
							displaySize="M">
					</f:Avatar>
					<m:Text
							text="M"
							class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
						alignItems="Center">
					<f:Avatar
							src="./test-resources/sap/f/images/Woman_avatar_02.png"
							displaySize="S">
					</f:Avatar>
					<m:Text
							text="S"
							class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
						alignItems="Center">
					<f:Avatar
							src="./test-resources/sap/f/images/Woman_avatar_02.png"
							displaySize="XS">
					</f:Avatar>
					<m:Text
							text="XS"
							class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
			</l:content>
		</l:Grid>
		<l:Grid
				defaultSpan="XL4 L5 M6 S12">
			<l:content>
				<m:VBox
					alignItems="Center">
					<m:Text
							text="The Avatar can be set to a custom size:"
							width="100%"
							class="sapUiMediumMarginTop sapUiMediumMarginBottom">
					</m:Text>
					<f:Avatar
							src="./test-resources/sap/f/images/Lamp_avatar_01.jpg"
							displaySize="Custom"
							customDisplaySize="250px"
							displayShape="Square">
					</f:Avatar>
					<m:Text
							text="Avatar with custom Size"
							class="sapUiSmallMarginTop">
					</m:Text>
				</m:VBox>
				<m:VBox
					alignItems="Center">
					<m:Text
							text="If there is no picture, icon or initials set, the Avatar displays a placeholder:"
							width="100%"
							class="sapUiMediumMarginTop sapUiMediumMarginBottom">
					</m:Text>
					<l:Grid
						defaultSpan="XL6 L6 M6 S6">
						<l:content>
							<m:VBox
								alignItems="Center">
								<f:Avatar
										displaySize="XL"
										displayShape="Square">
								</f:Avatar>
								<m:Text
										text="With product icon"
										class="sapUiSmallMarginTop">
								</m:Text>
							</m:VBox>
							<m:VBox
									alignItems="Center">
								<f:Avatar
										displaySize="XL">
								</f:Avatar>
								<m:Text
										text="With person icon"
										class="sapUiSmallMarginTop">
								</m:Text>
							</m:VBox>
						</l:content>
					</l:Grid>
				</m:VBox>
			</l:content>
		</l:Grid>
		<m:Text
				text="With the imageFitType property, the Avatar can fit images in two ways:"
				width="100%"
				class="sapUiSmallMarginBegin sapUiMediumMarginTop sapUiMediumMarginBottom">
		</m:Text>
		<l:Grid
				defaultSpan="XL2 L3 M6 S6">
			<l:content>
				<m:VBox
					alignItems="Center">
					<f:Avatar
						src="./test-resources/sap/f/images/Lamp_avatar_01.jpg"
						displaySize="XL"
						displayShape="Square">
					</f:Avatar>
					<m:Text
						text="Cover">
					</m:Text>
				</m:VBox>
				<m:VBox
						alignItems="Center">
					<f:Avatar
							src="./test-resources/sap/f/images/Lamp_avatar_01.jpg"
							displaySize="XL"
							displayShape="Square"
							imageFitType="Contain">
					</f:Avatar>
					<m:Text
							text="Contain">
					</m:Text>
				</m:VBox>
			</l:content>
		</l:Grid>
	</m:ScrollContainer>
</mvc:View>