<mvc:View
	height="100%"
	controllerName="sap.m.sample.UploadCollectionSortingFiltering.Page"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

	<Page showHeader="false">
		<content>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Select
					id="tbSelect"
					items="{/items}"
					selectedKey="{/selectedKey}"
					change="onSelectChange" >
					<core:Item key="{key}" text="{text}"/>
				</Select>
			</OverflowToolbar>
			<UploadCollection
				id="UploadCollection"
				showSeparators="All"
				items="{path : '/items', templateShareable : 'true'}">
				<toolbar>
					<OverflowToolbar id="myId">
						<Title id="attachmentTitle"/>
						<ToolbarSpacer/>
						<Button type="Transparent" text="Sort and Filter" press="onViewSettingsPressed"/>
					</OverflowToolbar>
				</toolbar>
				<infoToolbar>
					<Toolbar
						id="idInfoToolbar"
						active="true"
						press="onInfoToolbarPressed"
						visible="false">
						<Label id="idInfoToolbarLabel" />
						<ToolbarSpacer/>
						<core:Icon id="icClearFilters" width="2rem" src="sap-icon://sys-cancel"/>
					</Toolbar>
				</infoToolbar>
				<items>
					<UploadCollectionItem
						documentId="{documentId}"
						fileName="{fileName}"
						mimeType="{mimeType}"
						thumbnailUrl="{thumbnailUrl}"
						url="{url}"
						attributes="{path : 'attributes', templateShareable : 'true'}"
						statuses="{path : 'statuses', templateShareable : 'true'}"
						selected="{selected}">
						<attributes>
							<ObjectAttribute
								title="{title}"
								text="{parts : ['text', 'type'], formatter : '.formatAttribute'}"
								active="{active}"/>
						</attributes>
						<statuses>
							<ObjectStatus
								title="{title}"
								text="{text}"
								state="{state}"
								icon="{icon}"
								iconDensityAware="{iconDensityAware}"
								textDirection="{textDirection}"/>
						</statuses>
					</UploadCollectionItem>
				</items>
			</UploadCollection>
		</content>
	</Page>
</mvc:View>