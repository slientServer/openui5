<core:View height="100%"
		   xmlns:core="sap.ui.core"
		   xmlns="sap.m"
		   xmlns:l="sap.ui.layout"
		   xmlns:html="http://www.w3.org/1999/xhtml"
		   xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		   controllerName="sap.m.sample.QuickViewNavOrigin.QuickView">
	<Page showHeader="false" class="sapUiContentPadding" showNavButton="false">
		<l:VerticalLayout>
			<l:content>
				<Button id="quickViewBtn"
						class="sapUiSmallMarginBottom"
						text="Open QuickView"
						width="200px"
						press="handleQuickViewBtnPress" />
			</l:content>
		</l:VerticalLayout>
	</Page>
</core:View>
