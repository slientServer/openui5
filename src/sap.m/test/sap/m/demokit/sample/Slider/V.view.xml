<mvc:View
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout class="sapUiContentPadding">
		<Slider value="30" width="90%" class="sapUiSmallMarginBottom" />
		<Slider value="27" width="10em" class="sapUiSmallMarginBottom" />
		<Slider value="40" width="15em" class="sapUiSmallMarginBottom" />
		<Slider value="5" width="66%"
			min="0" max="50" enabled="false" class="sapUiSmallMarginBottom" />
		<Slider value="9" width="77%"
			min="0" max="10" class="sapUiSmallMarginBottom" />
		<Slider value="50" width="100%"
				min="0" max="100"
				showAdvancedTooltip="true"
				showHandleTooltip="false"
				class="sapUiSmallMarginBottom" />
		<Slider value="30" width="100%"
				min="0" max="200"
				showAdvancedTooltip="true"
				showHandleTooltip="false"
				inputsAsTooltips="true"
				class="sapUiSmallMarginBottom" />

		<Text text="Slider with tickmarks"/>
		<Slider enableTickmarks="true" range="0,10" min="0" max="10" class="sapUiSmallMarginBottom" width="400px"/>
		<Slider enableTickmarks="true" class="sapUiSmallMarginBottom" width="400px"/>
		<Slider enableTickmarks="true" min="-100" max="100" step="5" class="sapUiSmallMarginBottom" width="400px"/>

		<Text text="Slider with tickmarks and labels"/>
		<Slider min="0" max="30" enableTickmarks="true" class="sapUiSmallMarginBottom" width="400px">
			<ResponsiveScale tickmarksBetweenLabels="3"/>
		</Slider>

	</l:VerticalLayout>
</mvc:View>